<h1>Login</h1>
 
<%= form_tag author_sessions_path, method: :post do %>
  <div class="field">
    <%= label_tag :username %>
    <%= text_field_tag :username %>
    <br/>
  </div>
  <div class="field">
    <%= label_tag :password %>
    <%= password_field_tag :password %>
    <br/>
  </div>
  <div class="actions">
    <%= submit_tag "Login" %>
  </div>

  <br>

  <!-- Login with Facebook -->
  <div>
    <button class="btn"><%= link_to "Sign in with Facebook", "/auth/facebook", id: "sign_in" %></button> 
  </div>

  <div class="fb-login-button" data-show-faces="true" data-width="200" data-max-rows="2"></div>

<% end %>
