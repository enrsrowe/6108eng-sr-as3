<h1>Listing Authors</h1>
    <br>
    <%= link_to 'New Author', new_author_path ,:class => "btn btn-large btn-success" %>
<hr>

<table>
  <tr>
    <th>Username</th>
    <th>Email</th>
    <!--<th>Password</th>
    <th>Password confirmation</th> -->


<% @authors.each do |author| %>
  <tr>
    <td class="span3"><%= author.username %></td>
    <td class="span3"><%= author.email %></td>
    <!-- <td><%= author.password %></td>
    <td><%= author.password_confirmation %></td> -->
    <td>
    <div class="btn-group offset1" style="margin-top:35px">
      <%= link_to 'Show', author, :class => "btn btn-small btn-primary" %>
      <%= link_to 'Edit', edit_author_path(author), :class => "btn btn-small btn-warning" %>
      <%= link_to 'Destroy', author, :class => "btn btn-small btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %>
    </div>
    <hr>
  </td>
  </tr>
<% end %>
</table>

<br>
